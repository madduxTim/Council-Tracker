@{
    ViewBag.Title = "Home Page";
}
<div class="jumbotron" ng-controller="NgNavCTRL">
    <div class="row">
        <div class="col-sm-2 col-sm-offset-1">
            <h5>Click below to view allthe current 2017 ordinances.</h5>
            <button type="button" class="btn btn-default" ng-click="showOrds()">Ordinances</button>
        </div>
        <div class="col-sm-2 col-sm-offset-1">
            <h5>Click below to view all the current 2017 ordinances.</h5>
            <button type="button" class="btn btn-default" ng-click="showAllRes()">Resolutions</button>
        </div>
        <div class="col-sm-2 col-sm-offset-1">
            <h5>Click below to view current Metro Council Members.</h5>
            <button type="button" class="btn btn-default" ng-click="showAllMembers()">Council Members</button>
        </div>
        <div class="col-sm-2 col-sm-offset-1">
            <h5>Click below to view the list of your tracked bills.</h5>
            <button type="button" class="btn btn-default" ng-click="showTrackList()">Tracking List</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12" ng-view>
        @* NgPartials for content / app.js for routing *@
    </div>
</div>